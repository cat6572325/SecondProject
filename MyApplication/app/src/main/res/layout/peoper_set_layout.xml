<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="56dp"
    android:id="@+id/peoper_set_tool"
    >
    <LinearLayout
        android:layout_width="56dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:clickable="true"
        android:focusable="true"
        android:onClick="peoper_set_back"
        android:background="@drawable/click_to_gray"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/back_black"
            />

    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="个人信息编辑"
        android:textSize="24sp"
        android:textColor="#000000"
        android:layout_centerInParent="true"
        />
    <LinearLayout
        android:layout_width="56dp"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:gravity="center"
        android:clickable="true"
        android:focusable="true"
        android:onClick="peoper_set_sure"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="保存"
            android:textSize="19sp"
            android:textColor="#000000"
            />
    </LinearLayout>
</RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/peoper_set_tool"
        android:orientation="vertical"
        >
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="56dp"
    android:clickable="true"
    android:focusable="true"
    android:onClick="peoper_set_headImg"
    android:background="@drawable/click_to_gray"
    >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="头像"
        android:textColor="#9b9b9b"
        android:textSize="16sp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="15dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@mipmap/go"
        android:layout_centerVertical="true"
        android:layout_marginRight="11dp"
        android:layout_alignParentRight="true"
        android:textColor="#9b9b9b"
        android:textSize="16sp"
        android:id="@+id/right_icon"
        />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@mipmap/oval_7"
        android:layout_centerVertical="true"
        android:layout_marginRight="15dp"
        android:layout_toLeftOf="@id/right_icon"
        />
</RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#55555555"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:clickable="true"
        android:focusable="true"
        android:onClick="peoper_set_nickname"
        android:background="@drawable/click_to_gray"

        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="昵称"
            android:textColor="#9b9b9b"
            android:textSize="16sp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="11dp"
            android:layout_alignParentRight="true"
            android:id="@+id/right_nickname"
            android:text="好厉害的昵称"
            android:textColor="#9b9b9b"
            android:textSize="16sp"
            />
<EditText
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:focusable="true"
    android:visibility="invisible"
    android:id="@+id/peoper_set_nickname_e"
    android:layout_marginLeft="56dp"
    android:layout_marginRight="100dp"
    />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#55555555"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:clickable="true"
        android:focusable="true"
        android:background="@drawable/click_to_gray"

        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="性别"
            android:textColor="#9b9b9b"
            android:textSize="16sp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            />

        <android.support.v7.widget.AppCompatSpinner
            android:layout_width="200dp"
            android:layout_height="56dp"
            android:layout_centerVertical="true"

            android:layout_alignParentRight="true"
            android:id="@+id/sex_choose"
            android:textColor="#9b9b9b"
            android:textSize="16sp"
            android:text="男"
            />

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#55555555"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:clickable="true"
        android:focusable="true"
        android:background="@drawable/click_to_gray"

        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="签名"
            android:textColor="#9b9b9b"
            android:textSize="16sp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="11dp"
            android:layout_alignParentRight="true"
            android:id="@+id/right_icon3"
            android:text="无所不在其形，无不遁入其地，天下之大，莫非王土，率土之滨莫非王臣"
            android:layout_marginLeft="56dp"
            android:singleLine="true" />

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#55555555"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginTop="10px"
        android:clickable="true"
        android:focusable="true"
        android:onClick="peoper_set_loginout"
        android:background="@drawable/click_to_gray"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="退出登录"
            android:textColor="#ff0000"
            android:textSize="16sp"

            android:layout_centerInParent="true"
            />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#55555555"
        />

        <requestFocus
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <requestFocus
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_below="@id/peoper_set_tool"
        android:background="@drawable/shadow_line_down"
        />
</RelativeLayout>